<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="433.0" prefWidth="847.0"
            fx:controller="org.nrc.atlasjavafx.Controladores.ClienteController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Gestión de Clientes">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <TableView fx:id="tablaClientes"
                   layoutX="14.0"
                   layoutY="73.0"
                   prefHeight="200.0"
                   prefWidth="819.0"
                   minHeight="200.0"
                   minWidth="600.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" minWidth="50.0" text="ID" />
                <TableColumn fx:id="colNombre" prefWidth="182.0" minWidth="100.0" text="Nombre" />
                <TableColumn fx:id="colApellidos" prefWidth="123.0" minWidth="100.0" text="Apellidos" />
                <TableColumn fx:id="colEdad" prefWidth="98.0" minWidth="50.0" text="Edad" />
                <TableColumn fx:id="colGenero" prefWidth="147.0" minWidth="80.0" text="Género" />
                <TableColumn fx:id="colContacto" prefWidth="193.0" minWidth="100.0" text="Contacto" />
            </columns>
        </TableView>
        <Label layoutX="32.0" layoutY="307.0" text="Nombre:" />
        <Label layoutX="32.0" layoutY="353.0" text="Apellidos:" />
        <Label layoutX="32.0" layoutY="387.0" text="Edad:" />
        <Label layoutX="385.0" layoutY="307.0" text="Género:" />
        <Label layoutX="385.0" layoutY="353.0" text="Contacto:" />
        <TextField fx:id="txtNombre" layoutX="104.0" layoutY="303.0" />
        <TextField fx:id="txtApellidos" layoutX="104.0" layoutY="349.0" />
        <TextField fx:id="txtEdad" layoutX="104.0" layoutY="383.0" />
        <TextField fx:id="txtGenero" layoutX="474.0" layoutY="303.0" />
        <TextField fx:id="txtContacto" layoutX="474.0" layoutY="349.0" />
        <Button fx:id="btnAgregar" layoutX="703.0" layoutY="295.0" mnemonicParsing="false" styleClass="agregar" stylesheets="@mainFormDesign.css" text="Agregar" onAction="#agregarCliente" />
        <Button fx:id="btnModificar" layoutX="699.0" layoutY="337.0" mnemonicParsing="false" styleClass="modificar" stylesheets="@mainFormDesign.css" text="Modificar" onAction="#modificarCliente" />
        <Button fx:id="btnEliminar" layoutX="703.0" layoutY="370.0" mnemonicParsing="false" styleClass="eliminar" stylesheets="@mainFormDesign.css" text="Eliminar" onAction="#eliminarCliente" />
    </children>
</AnchorPane>
